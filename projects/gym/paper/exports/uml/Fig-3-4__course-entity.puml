@startuml
!define RECTANGLE class
!theme plain

entity Course {
  * id : Long <<PK, AUTO_INCREMENT>>
  --
  * name : String <<NOT NULL>>
  description : String
  * coach_id : Long <<FK>>
  * venue_id : Long <<FK>>
  * start_time : LocalDateTime <<NOT NULL>>
  * end_time : LocalDateTime <<NOT NULL>>
  * capacity : Integer <<NOT NULL>>
  enrolled_count : Integer <<DEFAULT 0>>
  * price : BigDecimal <<NOT NULL>>
  status : Integer <<1-开放报名,2-报名满员,3-已开始,4-已结束,0-已取消>>
  create_time : LocalDateTime <<AUTO_FILL>>
  update_time : LocalDateTime <<AUTO_FILL>>
  is_delete : Integer <<LOGICAL_DELETE>>
}

note right of Course : 课程实体类\n管理团体课程信息\n支持教练排课和学员报名

@enduml