  "presets": {
    "yxnu_thesis": {
      "description": "玉溪师范学院本科生毕业论文标准格式",
      "page": {
        "margin": {
          "top": 1800,
          "bottom": 1440,
          "left": 1800,
          "right": 1440
        },
        "size": "A4",
        "header_distance": 1260,
        "footer_distance": 720
      },
      "defaultStyles": {
        "title": "chapter_title",
        "chapter": "chapter_title",
        "section": "section_title",
        "subsection": "subsection_title",
        "text": "body_text",
        "abstract_title": "abstract_title",
        "abstract": "abstract_content",
        "keywords_label": "keywords_label",
        "keywords": "keywords_content",
        "figure": "figure_caption",
        "table": "table_caption",
        "tableHeader": "table_header",
        "tableCell": "table_cell",
        "reference": "reference_item",
        "cover_school": "cover_school_name",
        "cover_type": "cover_thesis_type",
        "cover_info": "cover_info"
      }
    }
  },

  "usage": {
    "description": "在章节JSON文件中，使用docx_type字段指定样式",
    "examples": {
      "chapter_with_style": {
        "id": "1",
        "title": "第1章 绪论",
        "docx_type": "chapter_title",
        "content": "本章介绍系统的整体概述...",
        "docx_type_text": "body_text"
      },
      "section_with_style": {
        "id": "1.1",
        "title": "研究背景及意义",
        "docx_type": "section_title",
        "content": "随着高校规模不断扩大...",
        "docx_type_text": "body_text"
      },
      "subsection_with_style": {
        "id": "1.1.1",
        "title": "研究背景",
        "docx_type": "subsection_title",
        "content": "传统的食堂管理模式...",
        "docx_type_text": "body_text"
      },
      "abstract_with_style": {
        "id": "0.1",
        "title": "摘要",
        "docx_type": "abstract_title",
        "content": "本文设计并实现了...",
        "docx_type_text": "abstract_content"
      }
    }
  },

  "notes": {
    "font_size_unit": "half-points (1pt = 2 half-points)",
    "indent_unit": "twips (1cm ≈ 567 twips, 1inch = 1440 twips)",
