@startuml usecase-user

skinparam linetype ortho
skinparam nodesep 100
skinparam ranksep 100

title 普通用户功能用例图

top to bottom direction

actor "普通用户" as User

rectangle "电商系统" {

  package "用户管理模块" as UserMgmt {
    usecase "用户注册" as UC1
    usecase "用户登录" as UC2
    usecase "修改个人信息" as UC3
    usecase "管理收货地址" as UC4
  }

  package "商品浏览模块" as GoodsBrowse {
    usecase "浏览商品列表" as UC5
    usecase "查看商品详情" as UC6
    usecase "搜索商品" as UC7
    usecase "按分类筛选" as UC8
  }

  package "购物车模块" as CartMgmt {
    usecase "添加到购物车" as UC9
    usecase "修改商品数量" as UC10
    usecase "删除购物车商品" as UC11
    usecase "清空购物车" as UC12
  }

  package "订单管理模块" as OrderMgmt {
    usecase "创建订单" as UC13
    usecase "订单支付" as UC14
    usecase "查看订单列表" as UC15
    usecase "查看订单详情" as UC16
    usecase "取消订单" as UC17
    usecase "确认收货" as UC18
  }

  package "首页推荐模块" as Recommend {
    usecase "查看热门推荐" as UC19
    usecase "查看新品推荐" as UC20
    usecase "查看个性化推荐" as UC21
  }
}

' 用户只连接到模块包，不连接具体用例
User --> UserMgmt
User --> GoodsBrowse
User --> CartMgmt
User --> OrderMgmt
User --> Recommend

' 关键用例之间的依赖关系（少量）
UC13 ..> UC2 : <<include>>
UC14 ..> UC13 : <<extend>>

@enduml
