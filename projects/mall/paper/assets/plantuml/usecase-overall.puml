@startuml usecase-overall

!pragma layout smetana
skinparam linetype ortho
skinparam nodesep 80
skinparam ranksep 80
!define RECTANGLE class

skinparam packageStyle rectangle
skinparam actorStyle awesome

title 电商系统整体用例图

left to right direction

actor "普通用户" as User
actor "管理员" as Admin

rectangle "电商系统" {
  package "用户管理模块" {
    usecase "用户注册" as UC1
    usecase "用户登录" as UC2
    usecase "个人信息管理" as UC3
    usecase "收货地址管理" as UC4
  }

  package "商品管理模块" {
    usecase "浏览商品" as UC5
    usecase "搜索商品" as UC6
    usecase "查看商品详情" as UC7
    usecase "管理商品信息" as UC8
    usecase "管理商品分类" as UC9
    usecase "商品上下架" as UC10
  }

  package "订单管理模块" {
    usecase "创建订单" as UC11
    usecase "订单支付" as UC12
    usecase "查看订单" as UC13
    usecase "取消订单" as UC14
    usecase "订单发货" as UC15
    usecase "确认收货" as UC16
  }

  package "购物车模块" {
    usecase "添加商品到购物车" as UC17
    usecase "修改商品数量" as UC18
    usecase "删除购物车商品" as UC19
    usecase "购物车结算" as UC20
  }

  package "首页推荐模块" {
    usecase "查看商品推荐" as UC21
    usecase "查看热门商品" as UC22
    usecase "查看促销活动" as UC23
  }
}

