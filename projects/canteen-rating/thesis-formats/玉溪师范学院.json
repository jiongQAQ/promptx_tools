{
  "school_name": "玉溪师范学院",
  "config_version": "1.0",
  "based_on_standard": "GB/T 7713-2006",
  "description": "玉溪师范学院本科生毕业论文格式规范",

  "page_setup": {
    "paper_size": {
      "width_mm": 210,
      "height_mm": 297,
      "description": "A4纸"
    },
    "margins": {
      "top_cm": 2.5,
      "bottom_cm": 2.0,
      "left_cm": 2.5,
      "right_cm": 2.0
    },
    "header_footer": {
      "header_distance_cm": 1.75,
      "footer_distance_cm": 1.0
    }
  },

  "fonts": {
    "chinese": "宋体",
    "english": "Times New Roman",
    "title_chinese": "黑体",
    "school_name": "华文行楷",
    "description": "中文使用宋体，西文使用Times New Roman，标题使用黑体"
  },

  "font_sizes": {
    "chu_hao": {
      "pt": 42,
      "name": "初号",
      "usage": "特大标题"
    },
    "xiao_chu": {
      "pt": 36,
      "name": "小初",
      "usage": "学校名称"
    },
    "yi_hao": {
      "pt": 26,
      "name": "一号"
    },
    "xiao_yi": {
      "pt": 24,
      "name": "小一"
    },
    "er_hao": {
      "pt": 22,
      "name": "二号",
      "usage": "本科生毕业论文"
    },
    "xiao_er": {
      "pt": 18,
      "name": "小二"
    },
    "san_hao": {
      "pt": 16,
      "name": "三号",
      "usage": "一级标题、摘要标题、参考文献标题"
    },
    "xiao_san": {
      "pt": 15,
      "name": "小三",
      "usage": "二级标题"
    },
    "si_hao": {
      "pt": 14,
      "name": "四号",
      "usage": "封面信息"
    },
    "xiao_si": {
      "pt": 12,
      "name": "小四",
      "usage": "正文、关键词"
    },
    "wu_hao": {
      "pt": 10.5,
      "name": "五号"
    }
  },

  "styles": {
    "normal": {
      "font": "chinese",
      "font_en": "english",
      "size": "xiao_si",
      "line_spacing": 1.25,
      "line_spacing_rule": "multiple",
      "alignment": "justify",
      "first_line_indent": 0,
      "description": "正文样式，无首行缩进"
    },

    "heading_1": {
      "font": "chinese",
      "font_en": "english",
      "size": "san_hao",
      "bold": true,
      "space_before_pt": 12,
      "space_after_pt": 6,
      "alignment": "left",
      "description": "一级标题（第X章），段前1行段后0.5行"
    },

    "heading_2": {
      "font": "chinese",
      "font_en": "english",
      "size": "xiao_san",
      "bold": true,
      "space_before_pt": 12,
      "space_after_pt": 12,
      "alignment": "left",
      "description": "二级标题（X.X），段前段后各1行"
    },

    "heading_3": {
      "font": "chinese",
      "font_en": "english",
      "size": "xiao_si",
      "bold": true,
      "space_before_pt": 6,
      "space_after_pt": 6,
      "alignment": "left",
      "description": "三级标题（X.X.X）"
    },

    "abstract_title": {
      "font": "chinese",
      "font_en": "english",
      "size": "san_hao",
      "bold": true,
      "alignment": "center",
      "description": "摘要标题"
    },

    "abstract_content": {
      "font": "chinese",
      "font_en": "english",
      "size": "xiao_si",
      "line_spacing": 1.25,
      "alignment": "justify",
      "description": "摘要内容"
    },

    "keywords_label": {
      "font": "chinese",
      "font_en": "english",
      "size": "xiao_si",
      "bold": true,
      "description": "关键词标签"
    },

    "keywords_content": {
      "font": "chinese",
      "font_en": "english",
      "size": "xiao_si",
      "description": "关键词内容"
    },

    "cover_school_name": {
      "font": "school_name",
      "size": "xiao_chu",
      "bold": true,
      "alignment": "center",
      "description": "封面学校名称"
    },

    "cover_thesis_type": {
      "font": "title_chinese",
      "font_en": "english",
      "size": "er_hao",
      "bold": true,
      "alignment": "center",
      "description": "本科生毕业论文"
    },

    "cover_info": {
      "font": "chinese",
      "font_en": "english",
      "size": "si_hao",
      "alignment": "left",
      "description": "封面信息（题目、姓名等）"
    },

    "reference_item": {
      "font": "chinese",
      "font_en": "english",
      "size": "xiao_si",
      "first_line_indent": 0,
      "left_indent_cm": 1,
      "description": "参考文献条目，悬挂缩进"
    }
  },

  "sections": {
    "cover": {
      "enabled": true,
      "title": "封面",
      "items": ["学科分类号", "学校名称", "本科生毕业论文", "题目", "姓名", "学号", "学院", "专业", "导师", "职称"]
    },
    "declarations": {
      "enabled": true,
      "title": "声明页",
      "items": ["原创性声明", "使用授权声明"]
    },
    "toc": {
      "enabled": true,
      "title": "目  录",
      "auto_generate": true
    },
    "abstract_cn": {
      "enabled": true,
      "title": "摘  要",
      "includes": ["摘要内容", "关键词"]
    },
    "abstract_en": {
      "enabled": true,
      "title": "Abstract",
      "includes": ["Abstract content", "Key words"]
    },
    "main_body": {
      "enabled": true,
      "description": "正文章节"
    },
    "references": {
      "enabled": true,
      "title": "参考文献",
      "standard": "GB/T 7714-2015",
      "description": "国标参考文献格式"
    },
    "acknowledgments": {
      "enabled": true,
      "title": "致谢"
    }
  },

  "special_rules": {
    "no_first_line_indent": true,
    "description": "正文不使用首行缩进",
    "double_sided_print": false,
    "roman_numerals_for_abstract": false,
    "max_keywords": 5,
    "chapter_start_new_page": true,
    "description_note": "每章从新页开始"
  },

  "notes": {
    "extracted_from": "export-thesis-to-word.py",
    "extraction_date": "2025-10-01",
    "validation_status": "Based on existing implementation",
    "usage": "用于thesis-to-docx工具的格式配置"
  }
}
