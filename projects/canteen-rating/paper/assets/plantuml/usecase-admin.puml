@startuml
!theme plain
skinparam backgroundColor White
skinparam usecase {
  BackgroundColor #E8F5E8
  BorderColor #2E7D32
  FontSize 12
}
skinparam actor {
  BackgroundColor #FFF3E0
  BorderColor #F57C00
  FontSize 12
}
skinparam arrow {
  Color #2E7D32
  FontSize 10
}

title 管理员角色用例图

actor "管理员" as Admin

