@startuml
!theme plain
skinparam backgroundColor White
skinparam usecase {
  BackgroundColor #E8F5E8
  BorderColor #2E7D32
  FontSize 12
}
skinparam actor {
  BackgroundColor #FFF3E0
  BorderColor #F57C00
  FontSize 12
}
skinparam arrow {
  Color #2E7D32
  FontSize 10
}

title 学生用户角色用例图

actor "学生用户" as Student

usecase "用户注册" as UC1
usecase "用户登录" as UC2
usecase "个人信息管理" as UC3
usecase "浏览菜品信息" as UC4
usecase "发表菜品评价" as UC5
usecase "上传菜品图片" as UC6
usecase "查看评价历史" as UC7
usecase "提交投诉建议" as UC8
usecase "查看处理进度" as UC9

Student --> UC1
Student --> UC2
Student --> UC3
Student --> UC4
Student --> UC5
Student --> UC7
Student --> UC8
Student --> UC9

UC4 .> UC2 : <<include>>
UC5 .> UC2 : <<include>>
UC7 .> UC2 : <<include>>
UC8 .> UC2 : <<include>>
UC9 .> UC2 : <<include>>

UC5 <.. UC6 : <<extend>>

@enduml