@startuml
!theme plain

start
:系统管理员登录;

if (功能选择?) then (用户管理)
  :查看用户列表;
  :筛选查询;
  if (操作?) then (禁用/启用)
    :切换用户状态;
  elseif (重置密码)
    :重置为默认密码;
  elseif (角色分配)
    :修改用户角色;
  endif
elseif (敏感词维护)
  :查看敏感词列表;
  :新增/编辑/删除敏感词;
  :清除缓存;
  :重新加载敏感词库;
elseif (统计分析)
  :查看统计仪表盘;
  :选择时间范围;
  :查看用户趋势图;
  :查看评价趋势图;
  :查看投诉处理率;
  :查看菜品排行;
elseif (系统日志)
  :查询日志列表;
  :按条件筛选;
  :查看日志详情;
endif

:操作完成;
stop
@enduml