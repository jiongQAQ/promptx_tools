digraph dfd_top_level {
    // 图的全局设置
    graph [
        rankdir=LR
        nodesep=2.5
        ranksep=4.0
        pad=1.5
        dpi=300
        splines=ortho
        bgcolor=white
    ];

    // 节点默认设置
    node [
        fontname="Microsoft YaHei"
        fontsize=20
    ];

    // 边默认设置
    edge [
        fontname="Microsoft YaHei"
        fontsize=17
        labeldistance=3.0
    ];

    // 外部实体（矩形）
    Admin [
        label="管理员"
        shape=box
        width=2.5
        height=1.2
        style=rounded
    ];

    User [
        label="用户"
        shape=box
        width=2.5
        height=1.2
        style=rounded
    ];

    // 处理过程（椭圆）
    System [
        label="食堂评价管理系统"
        shape=ellipse
        width=3.5
        height=1.5
    ];

    // 数据流（箭头）
    Admin -> System [xlabel="管理员指令"];
    System -> Admin [xlabel="指令执行结果"];

    System -> User [xlabel="用户指令"];
    User -> System [xlabel="指令执行结果"];
}