@startuml
!define STUDENT_COLOR #4CAF50
!define TEACHER_COLOR #2196F3
!define USECASE_COLOR #FFF9C4
!define SYSTEM_COLOR #E3F2FD

skinparam usecase {
  BackgroundColor USECASE_COLOR
  BorderColor #333333
  ArrowColor #333333
}

skinparam actor {
  BackgroundColor #FFFFFF
  BorderColor #333333
}

title 校园食堂评价系统 - 普通用户角色用例图

left to right direction

actor "学生" as Student STUDENT_COLOR
actor "教职工" as Teacher TEACHER_COLOR

rectangle "校园食堂评价系统" as System {
  usecase "用户注册" as UC1
  usecase "用户登录" as UC2
  usecase "浏览菜品" as UC3
  usecase "查看菜品详情" as UC4
  usecase "提交评价" as UC5
  usecase "查看评价统计" as UC6
  usecase "修改个人信息" as UC7
}

Student --> UC1
Student --> UC2
Student --> UC3
Student --> UC4
Student --> UC5
Student --> UC6
Student --> UC7

Teacher --> UC2
Teacher --> UC3
Teacher --> UC4
Teacher --> UC5
Teacher --> UC6
Teacher --> UC7

UC3 .> UC4 : <<extend>>
UC5 .> UC2 : <<include>>

note right of UC5
  评价功能需要用户
  先完成身份验证
end note

note bottom of System
  系统边界明确定义了
  用户可访问的功能范围
end note

@enduml