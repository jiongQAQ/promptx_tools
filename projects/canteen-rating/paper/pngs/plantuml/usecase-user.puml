@startuml
!theme plain
skinparam backgroundColor White
skinparam usecase {
  BackgroundColor #E8F5E8
  BorderColor #2E7D32
  FontSize 12
}
skinparam actor {
  BackgroundColor #FFF3E0
  BorderColor #F57C00
  FontSize 12
}
skinparam arrow {
  Color #2E7D32
  FontSize 10
}
skinparam linetype ortho

left to right direction

actor "普通用户" as User

rectangle "食堂评价管理系统" {

  package "用户认证" {
    usecase "用户注册" as UC1
    usecase "用户登录" as UC2
    usecase "密码修改" as UC3
  }

  package "菜品浏览" {
    usecase "浏览菜品信息" as UC4
    usecase "查看菜品详情" as UC5
    usecase "搜索筛选菜品" as UC6
  }

  package "评分评价" {
    usecase "提交菜品评分" as UC7
    usecase "查看历史评价" as UC8
    usecase "修改个人评价" as UC9
    usecase "查看他人评价" as UC10
  }

  package "投诉建议" {
    usecase "提交投诉建议" as UC11
    usecase "查看投诉状态" as UC12
    usecase "追加投诉信息" as UC13
  }

  package "个人中心" {
    usecase "查看个人信息" as UC14
    usecase "修改个人资料" as UC15
    usecase "查看消息通知" as UC16
  }
}

' 普通用户与用例的关联
User --> UC1
User --> UC2
User --> UC3
User --> UC4
User --> UC5
User --> UC6
User --> UC7
User --> UC8
User --> UC9
User --> UC10
User --> UC11
User --> UC12
User --> UC13
User --> UC14
User --> UC15
User --> UC16

' 用例之间的关系
UC1 ..> UC2 : <<extend>>
UC4 ..> UC5 : <<extend>>
UC4 ..> UC6 : <<include>>
UC7 ..> UC8 : <<extend>>
UC11 ..> UC12 : <<include>>
UC12 ..> UC13 : <<extend>>
UC14 ..> UC15 : <<extend>>

' 约束说明
note right of UC7 : 一人一菜一评分\n防止重复评分

note bottom of UC11 : 敏感词过滤\n投诉分类处理

note left of UC2 : JWT身份认证\n会话管理

@enduml