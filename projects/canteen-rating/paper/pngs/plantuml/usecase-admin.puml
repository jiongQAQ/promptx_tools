@startuml
!theme plain
skinparam backgroundColor White
skinparam usecase {
  BackgroundColor #E8F5E8
  BorderColor #2E7D32
  FontSize 12
}
skinparam actor {
  BackgroundColor #FFF3E0
  BorderColor #F57C00
  FontSize 12
}
skinparam arrow {
  Color #2E7D32
  FontSize 10
}
skinparam linetype ortho

left to right direction

actor "管理员" as Admin

rectangle "食堂评价管理系统" {

  package "档口管理" {
    usecase "档口信息维护" as UC1
    usecase "档口状态控制" as UC2
    usecase "档口数据查看" as UC3
  }

  package "菜品管理" {
    usecase "菜品信息录入" as UC4
    usecase "菜品分类配置" as UC5
    usecase "菜品上下架管理" as UC6
    usecase "菜品评价查看" as UC7
  }

  package "投诉处理" {
    usecase "投诉审核处理" as UC8
    usecase "投诉分类管理" as UC9
    usecase "投诉状态跟踪" as UC10
    usecase "投诉结果反馈" as UC11
  }

  package "数据查看" {
    usecase "评价数据统计" as UC12
    usecase "投诉趋势分析" as UC13
    usecase "用户行为分析" as UC14
    usecase "业务报表生成" as UC15
  }
}

' 管理员与用例的关联
Admin --> UC1
Admin --> UC2
Admin --> UC3
Admin --> UC4
Admin --> UC5
Admin --> UC6
Admin --> UC7
Admin --> UC8
Admin --> UC9
Admin --> UC10
Admin --> UC11
Admin --> UC12
Admin --> UC13
Admin --> UC14
Admin --> UC15

' 用例之间的关系
UC1 ..> UC2 : <<extend>>
UC4 ..> UC5 : <<include>>
UC8 ..> UC9 : <<include>>
UC8 ..> UC10 : <<extend>>
UC10 ..> UC11 : <<extend>>
UC12 ..> UC15 : <<extend>>

' 约束说明
note right of UC8 : 分级处理机制\n普通投诉→管理员\n重要投诉→系统管理员

note bottom of UC12 : 提供数据分析决策支持\n投诉趋势、处理效率\n业务洞察等功能

@enduml