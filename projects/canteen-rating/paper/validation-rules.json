{
  "allowedBackend": [
    "Spring Boot 2.7.18",
    "Java 17",
    "MySQL 8.3.0",
    "MyBatis Plus 3.5.3.1",
    "Spring Security",
    "JWT (jsonwebtoken 0.11.5)",
    "H2 Database",
    "Lombok",
    "SpringDoc OpenAPI"
  ],
  "allowedFrontend": [
    "Vue 3.3.4",
    "Vue 3.4.0",
    "Element Plus 2.3.8",
    "Element Plus 2.4.0",
    "Pinia 2.1.6",
    "Pinia 2.1.0",
    "Vue Router 4.2.4",
    "Vue Router 4.2.0",
    "Vite 4.4.5",
    "Vite 5.0.0",
    "Axios",
    "ECharts",
    "Day.js",
    "VueUse"
  ],
  "allowedPatterns": [
    "MVC Architecture",
    "RESTful API",
    "Single Page Application",
    "Three-layer Architecture",
    "JWT Authentication",
    "Role-based Access Control",
    "Logical Delete",
    "Auto-fill Timestamps"
  ],
  "prohibitedTechnologies": [
    "microservices",
    "GraphQL",
    "Redis",
    "Docker",
    "Kubernetes",
    "Message Queue (RabbitMQ/Kafka)",
    "API Gateway",
    "Service Mesh",
    "Elasticsearch",
    "MongoDB",
    "NoSQL databases",
    "Distributed Systems",
    "Container Orchestration",
    "Event Streaming"
  ],
  "prohibitedPatterns": [
    "分布式架构",
    "微服务拆分",
    "容器化部署",
    "消息队列集成",
    "分库分表",
    "读写分离",
    "缓存中间件",
    "服务发现",
    "配置中心",
    "链路追踪"
  ],
  "verificationRules": {
    "maxTables": 15,
    "maxControllers": 20,
    "maxComplexity": "monolithic",
    "requiredEvidence": [
      "source code files",
      "configuration files",
      "dependency declarations"
    ]
  },
  "validationConstraints": {
    "noInventedTechnologies": true,
    "mustMatchSourceCode": true,
    "noOverEngineering": true,
    "evidenceRequired": true
  }
}